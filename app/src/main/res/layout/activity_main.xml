<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.daniel.overwatchsound.MainActivity"
    android:background="@drawable/backgroundk"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/tank"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/tank"
            android:layout_width="160dp"
            android:layout_height="182dp" />

        <Button
            android:id="@+id/Support"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/support"
            android:layout_width="160dp"
            android:layout_height="182dp" />

        <Button
            android:id="@+id/defense"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/defense"
            android:layout_width="160dp"
            android:layout_height="182dp" />

        <Button
            android:id="@+id/offense"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/offense"
            android:layout_width="160dp"
            android:layout_height="182dp" />

    </GridLayout>
</RelativeLayout>
